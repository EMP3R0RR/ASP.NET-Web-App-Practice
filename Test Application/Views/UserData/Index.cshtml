
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<a href="/student/create">Create</a>

@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>UName</th>
            <th>StID</th>
            <th>Dob</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Profession</th>
            <th>Hobbies</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.Name</td>
                <td>@item.UName</td>
                <td>@item.StID</td>
                <td>@item.DOB</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.Profession</td>
                <td>@item.Hobbies</td>
                <td>
                    <a href="/student/edit/@item.Id">Edit</a>
                </td>
            </tr>
        }
    </table>
}

else
{
    <h5 class="text-danger"> No Data Found</h5>
}