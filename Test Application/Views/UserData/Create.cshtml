    <input type="email" name="Email" value="@Model.Email" />
    
    <br>
    <lable>DOB</lable>
    <input type="date" name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")" /> @*yyyy-MM-dd*@
  
