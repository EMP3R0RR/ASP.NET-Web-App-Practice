<form method="post">

    <lable>Name</lable>
    <input type="text" name="Name" value="@Model.Name" />
    
    <br />
    <lable>UserName</lable>
    <input type="text" name="UName" value="@Model.UName" />
    
    <br />
    <lable>ID</lable>
    <input type="text" name="StID" value="@Model.StID" />
    
    <br>
