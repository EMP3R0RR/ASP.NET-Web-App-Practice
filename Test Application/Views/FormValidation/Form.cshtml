
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //the given value feild hold the values given by the users even if the form reloads with errors.
    // name attribute matches the data with model property names. they are same for model binding technique
    //
}

<h2>Form</h2>

@Html.ValidationSummary()

<form class="form-control" action="/FormValidation/Form" method="post">

    <lable>Name</lable>
    <input type="text" name="Name" value="@Model.Name" />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <br />
    <lable>UserName</lable>
    <input type="text" name="UName" value="@Model.UName" />
    <span class="text-danger">@Html.ValidationMessage("UName")</span>
    <br />
    <lable>ID</lable>
    <input type="text" name="ID" value="@Model.ID" />
    <span class="text-danger">@Html.ValidationMessage("ID")</span>
    <br>
    <lable>Email</lable>
    <input type="email" name="Email" value="@Model.Email" />
    <span class="text-danger">@Html.ValidationMessage("Email")</span>
    <br>
    <lable>DOB</lable>
    <input type="date" name="DOB" value="2025-01-01" /> @*yyyy-MM-dd*@
    <span class="text-danger">@Html.ValidationMessage("DOB")</span>
    <br />

    <input type="submit" class="btn btn-primary" placeholder="Done" />

</form>

