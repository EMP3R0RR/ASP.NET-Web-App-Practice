
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (Model.Count != 0)
{
    <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Qty</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Product/edit/@item.Id">Edit</a>
                </td>
                <td>
                    <a href="/Product/delete/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
}

else
{
    <h5 class="text-danger"> No Data Found</h5>
}
